{
  "name": "my-lovely-cat",
  "displayName": "%name%",
  "description": "%description%",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.106.1"
  },
  "categories": [
    "AI",
    "Chat"
  ],
  "keywords": [
    "AI Chat",
    "AI",
    "聊天",
    "编程"
  ],
  "author": {
    "name": "web探险家",
    "url": "https://x.com/gzhlm2025"
  },
  "publisher": "webjiangh",
  "icon": "assets/logo.png",
  "activationEvents": [],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "my-lovely-cat.ask",
        "title": "%view.open.chat%"
      },
      {
        "command": "my-lovely-cat.settings",
        "title": "%view.chat.settings%",
        "icon": {
          "dark": "assets/settings-dark.svg",
          "light": "assets/settings.svg"
        }
      },
      {
        "command": "my-lovely-cat.clear",
        "title": "%view.chat.clear%",
        "icon": {
          "dark": "assets/clear-dark.svg",
          "light": "assets/clear.svg"
        }
      }
    ],
    "chatParticipants": [
      {
        "id": "chat-my-lovely-cat",
        "name": "MyCat",
        "fullName": "%name%",
        "description": "%description%",
        "isSticky": true
      }
    ],
    "configuration": {
      "title": "%name%",
      "properties": {
        "my-lovely-cat.model-token": {
          "type": "string",
          "default": "",
          "description": "%settings.model.token%"
        }
      }
    },
    "viewsContainers": {
      "activitybar": [
        {
          "id": "chat-my-lovely-cat-view",
          "title": "%activitybar.main.name%",
          "icon": "assets/menus.svg"
        }
      ]
    },
    "views": {
      "chat-my-lovely-cat-view": [
        {
          "id": "my-lovely-cat-view",
          "name": "%activitybar.main.view.name%",
          "icon": "assets/menus.svg",
          "type": "webview"
        }
      ]
    },
    "menus": {
      "view/title": [
        {
          "command": "my-lovely-cat.clear",
          "when": "view == my-lovely-cat-view",
          "group": "navigation"
        },
        {
          "command": "my-lovely-cat.settings",
          "when": "view == my-lovely-cat-view",
          "group": "navigation"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "npm run check-types && npm run lint && node esbuild.js",
    "build:cont": "node esbuild.js --cont",
    "watch": "npm-run-all -p watch:*",
    "watch:esbuild": "node esbuild.js --watch",
    "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
    "package": "npm run check-types && npm run lint && node esbuild.js --production",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "check-types": "tsc --noEmit",
    "lint": "eslint src",
    "test": "vscode-test",
    "pack": "vsce package"
  },
  "devDependencies": {
    "@types/markdown-it": "^14.1.2",
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "@types/vscode": "^1.106.1",
    "@vscode/test-cli": "^0.0.12",
    "@vscode/test-electron": "^2.5.2",
    "esbuild": "^0.27.0",
    "eslint": "^9.39.1",
    "npm-run-all": "^4.1.5",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.46.3"
  },
  "dependencies": {
    "dexie": "^4.2.1",
    "highlight.js": "^11.11.1",
    "markdown-it": "^14.1.0",
    "marked": "^17.0.1",
    "uuid": "^13.0.0",
    "vscode-nls": "^5.2.0"
  }
}
